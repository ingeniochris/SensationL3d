<div class="container mt-3 ">
  <div class="row">
    <div class="col-md-6 mx-auto">
      {{> msg}}
      {{> errors}}
      <div class="card card-body text-white bg-dark">
        <img src="/img/sled.webp" class="logo rounded-circle">

        <h3 class="text-center">Crea tu cuenta</h3>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="email">Nombre:</label>
            <input name="name" type="text" class="form-control" placeholder="Ingresa tu nombre" value="{{name}}"
              required autofocus>
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input name="password" type="password" class="form-control" placeholder="Ingresa tu password"
              name="{{password}}" required>
          </div>
          <div class="form-group  ">
            <div class="g-recaptcha " data-sitekey="6LdZzLgUAAAAAGYwddBXi1QY7XQmg8WKCbFCLkUW"></div>
          </div>
          <div class="form-group  ">
          <button type="submit" class="btn btn-primary btn-block">Registro</button>
          </div>
           <div class="form-group text-center">
        <div class="font-weight-bolder ">¿Ya tienes una cuenta?
          <a href="/users/login" class="font-weight-lighter  tx">Iniciar sesión</a>
        </div>
      </div>
        </form>
      </div>
    </div>
  </div>
</div>



<script src='https://www.google.com/recaptcha/api.js'></script>
