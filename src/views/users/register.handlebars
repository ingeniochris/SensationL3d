<div class="container mt-3 ">
<div class="row">
  <div class="col-md-6 mx-auto">
    {{> msg}}
      {{> errors}}
    <div class="card card-body text-white bg-dark">
      <img  src="/img/sled.webp" class="logo rounded-circle">
    
      <h3 class="text-center">Crea tu cuenta</h3>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="email">Nombre:</label>
          <input name="name" type="text" class="form-control" placeholder="Registra tu nombre" value="{{name}}" required autofocus>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input name="password" type="password" class="form-control" placeholder="Registra tu password" name="{{password}}" required>
        </div>
        
        
        <button type="submit" class="btn btn-primary btn-block">Registro</button>
      </form>
    </div>
  </div>
</div>
</div>
